@using MvcLibrary.Models.Entity
@model List<Announcement>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<script src="~/Scripts/jquery-3.7.0.js"></script>
<br />
<h2>Duyurular</h2>


<table class="table table-striped">
    <tr>
        <th>Duyuru No</th>
        <th>Kategori</th>
        <th>İçerik</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detay</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AnnouncementId</td>
            <td>@item.AnnouncementCategory</td>
            <td>@item.AnnouncementContent</td>
            <td>@item.Date.Value.ToShortDateString()</td>

            <td><a href="/Announcement/AnnouncementDelete/@item.AnnouncementId" id="btn1" class="btn btn-outline-danger btn-delete"> Sil</a></td>
            <td><a href="/Announcement/AnnouncementUpdate/@item.AnnouncementId" class="btn btn-outline-warning"> Güncelle</a></td>
            <td><a href="/Announcement/AnnouncementDetails/@item.AnnouncementId" class="btn btn-outline-info"> Detaylar</a></td>
        </tr>
    }


</table>
<a href="/Announcement/AnnouncementAdd/" class="btn btn-outline-success"> Ekle</a>
<br />

<script>
    $(".btn-delete").click(function (e) {
        e.preventDefault();

        const url = $(this).attr("href");

        Swal.fire({
            title: "Emin misiniz?",
            text: "Bu işlemi geri alamayacaksınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, sil!",
            cancelButtonText: "Hayır"   // İşte burası
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = url;
            }
        });
    });



</script>




